---
const { title = "SMBCyberHub", description = "Cybersecurity kits for small business. Audit-ready, GDPR-compliant, no logins or subscriptions." } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />

    <!-- Open Graph / Social Meta -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://smbcyberhub.com/images/smbcyberhub-logo.webp" />
    <meta property="og:url" content="https://smbcyberhub.com/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://smbcyberhub.com/images/smbcyberhub-logo.webp" />

    <!-- Site-wide Organization Schema for Google Rich Results -->
    <script type="application/ld+json">
      {`
        {
          "@context": "https://schema.org",
          "@type": "Organization",
          "name": "SMBCyberHub",
          "url": "https://smbcyberhub.com",
          "logo": "https://smbcyberhub.com/images/smbcyberhub-logo.webp",
          "description": "Downloadable cybersecurity kits for small teams. Audit-ready, no logins, GDPR compliant."
        }
      `}
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900 font-sans">
    <!-- Header Banner (blue background, logo + nav) -->
    <header class="w-full bg-[#234488] flex items-center justify-between px-6 py-4">
      <a href="/" class="flex items-center space-x-3">
        <img src="/images/smbcyberhub-logo.webp" alt="SMBCyberHub Logo" class="h-16 w-auto" />
        <span class="sr-only">SMBCyberHub Home</span>
      </a>
      <nav aria-label="Main Navigation" class="flex space-x-8">
        <a href="/kits" class="text-white font-medium hover:text-emerald-300 transition">Compare Kits</a>
        <a href="/free-sample" class="text-white font-medium hover:text-emerald-300 transition">Free Sample</a>
        <a href="/faq" class="text-white font-medium hover:text-emerald-300 transition">FAQ</a>
        <a href="/about" class="text-white font-medium hover:text-emerald-300 transition">About</a>
        <a href="/blog" class="text-white font-medium hover:text-emerald-300 transition">Blog</a>
        <a href="/contact" class="text-white font-medium hover:text-emerald-300 transition">Contact</a>
      </nav>
    </header>

    <main class="flex-1 flex flex-col">
      <slot />
    </main>

    <footer class="w-full border-t border-gray-200 bg-gray-50 text-gray-600 text-sm py-4 px-6 flex items-center justify-between">
      <span>
        &copy; {new Date().getFullYear()} SMBCyberHub. All rights reserved.
      </span>
      <span class="flex items-center gap-2">
        <svg class="w-5 h-5 text-green-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <circle cx="12" cy="12" r="10" />
          <path d="M12 16v-4" />
          <path d="M12 8h.01" />
        </svg>
        GDPR Article 39.1(b) â€“ No tracking or logins required.
      </span>
    </footer>
  </body>
</html>

