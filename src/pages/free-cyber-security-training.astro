};

const schemaData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is your free cyber security training really free?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! The SMBCyberHub Free Sample Kit is truly free for internal use. No subscriptions, no tracking, and no upsells."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need to create an account or give personal details?",
