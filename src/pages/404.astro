---
import Layout from '../layouts/Layout.astro'; // Adjust this path if your layouts folder is elsewhere
---

<Layout>
  <main id="main-content" role="main" class="flex flex-col items-center justify-center px-4 py-16 min-h-[60vh]">
    <!-- Lock Icon SVG (visual context) -->
    <svg class="w-14 h-14 text-green-700 mb-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
      <rect x="5" y="11" width="14" height="9" rx="2" />
      <path d="M7 11V7a5 5 0 0 1 10 0v4" />
    </svg>
    <h1 class="text-4xl sm:text-5xl font-extrabold mb-3">404: Page Not Found</h1>
    <p class="text-lg text-gray-700 mb-7 text-center max-w-xl">
      Sorry, we couldn't find that page.<br />
      But your cybersecurity journey isn't over!
    </p>
    <div class="flex flex-col sm:flex-row gap-4 mb-4 w-full max-w-md">
      <a href="/" class="flex-1 px-6 py-3 rounded-2xl bg-green-700 text-white text-base font-semibold shadow hover:bg-green-800 flex items-center justify-center transition">
        <!-- Home Icon SVG -->
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M3 10.5 12 4l9 6.5M5 11v7a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-3a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v3a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-7" />
        </svg>
        Back to Home
      </a>
      <a href="/kits" class="flex-1 px-6 py-3 rounded-2xl border border-green-700 text-green-700 bg-white text-base font-semibold hover:bg-green-50 flex items-center justify-center transition">
        See Cybersecurity Kits
      </a>
      <a href="/blog" class="flex-1 px-6 py-3 rounded-2xl border border-green-700 text-green-700 bg-white text-base font-semibold hover:bg-green-50 flex items-center justify-center transition">
        Read Security Tips
      </a>
    </div>
    <a href="/free-sample" class="inline-block mt-2 text-green-700 underline hover:text-green-800 font-medium">
      Try a Free Sample Kit &rarr;
    </a>
  </main>
</Layout>

